generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int          @id @default(autoincrement())
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  name           String?
  email          String       @unique
  password       String
  isAdmin        Boolean      @default(false)
  createdAt      DateTime     @default(now())
  bookings       Booking[]
}

model Vehicle {
  id             Int          @id @default(autoincrement())
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  name           String
  number         String
  capacity       Int
  trips          Trip[]
}

model Trip {
  id             Int          @id @default(autoincrement())
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  vehicleId      Int
  source         String
  destination    String
  departure      DateTime
  arrival        DateTime
  price          Int
  bookings       Booking[]
  vehicle        Vehicle      @relation(fields: [vehicleId], references: [id])
}

model Booking {
  id             Int          @id @default(autoincrement())
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])
  userId         Int
  trip           Trip         @relation(fields: [tripId], references: [id])
  tripId         Int
  seats          String   // JSON-serialized seats (stored as string for SQLite compatibility)
  seatCount      Int
  totalPrice     Int
  isPaid         Boolean  @default(false)
  paidAt         DateTime?
  paymentResponse String?
  txnId          String?
  paymentStatus String?
  tripDate       DateTime?
  status         String   @default("PENDING")
  createdAt      DateTime @default(now())
  passengers     Passenger[]
}

model Passenger {
  id        Int      @id @default(autoincrement())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId Int
  name      String
  age       Int?
  mobile    String
  gender    String
  seat      String
  createdAt DateTime @default(now())
}

model Organization {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  users     User[]
  vehicles  Vehicle[]
  trips     Trip[]
  bookings  Booking[]
}
