generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Vehicle {
  id        Int     @id @default(autoincrement())
  name      String
  number    String
  capacity  Int
  trips     Trip[]
}

model Trip {
  id           Int      @id @default(autoincrement())
  vehicle      Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId    Int
  source       String
  destination  String
  departure    DateTime
  arrival      DateTime
  price        Int
  bookings     Booking[]
}

model Booking {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  trip        Trip     @relation(fields: [tripId], references: [id])
  tripId      Int
  seats       String   // JSON-serialized seats (stored as string for SQLite compatibility)
  seatCount   Int
  totalPrice  Int
  isPaid      Boolean  @default(false)
  paidAt      DateTime?
  paymentResponse String?
  // Paytm transaction details
  txnId       String?
  paymentStatus String?
  respCode    String?
  respMsg     String?
  createdAt   DateTime @default(now())
}
